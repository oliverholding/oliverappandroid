<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProduct"
                android:src="@color/colorGradientCenterRed"
                android:layout_weight="0.2"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_weight="1"
                android:padding="4dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/txtProductName"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Producto: product_name"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtFinancialInstitutionName"
                    android:textColor="@android:color/black"
                    android:text="Inst Finacniera: financial_institution_name"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnDetails"
            android:text="Ver Detalles"
            android:textColor="@android:color/white"
            android:background="@drawable/blue_button_style_ripple"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>

        <View
            android:layout_margin="4dp"
            android:background="@color/gray2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

</RelativeLayout>