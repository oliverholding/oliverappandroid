<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTitle"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Define tus objetivos de Aprendizaje y Crecimiento en base a la siguiente pregunta:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtSubtitle"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="¿Qué conocimientos y habilidades necesitas cubrir para cumplir tu objetivo estratégico superior o primordial?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtMessage"
                    android:textSize="12sp"
                    android:justificationMode="inter_word"
                    android:layout_margin="4dp"
                    android:text="Para definirlo debes de saber que un objetivo estratégico son metas a largos plazo y los objetivos operativos son las metas a corto plazo que te llevan a ir cumpliendo parcialmenet tus objetivos estratégicos. Tenlo en cuenta para no confundirte."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:text="Ingresa el Nombre de tu Objetivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/edtObjectiveName"
                    android:hint="Nombre del Objetivo..."
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:text="¿Con qué tema estratégico se relaciona?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnArea"
                    android:gravity="center|start"
                    android:hint="Seleccionar..."
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

