<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.CareManagerActivity">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:src="@drawable/gray_gradient_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:padding="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCompanyProfile"
                android:layout_margin="8dp"
                android:src="@color/colorGradientCenterRed"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="80dp"/>

            <LinearLayout
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCompanyName"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtRuc"
                    android:gravity="end"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/white"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtExp"
                        android:layout_marginEnd="4dp"
                        android:text="Exp: "
                        android:textColor="@android:color/white"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginEnd="4dp"
                        android:text="1"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <com.xw.repo.BubbleSeekBar
                        android:clickable="false"
                        android:id="@+id/expBar"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:bsb_track_color="@color/gray2"
                        app:bsb_bubble_color="@color/gray1"
                        app:bsb_bubble_text_color="@android:color/white"
                        app:bsb_second_track_color="@color/orange1"
                        app:bsb_thumb_color="@android:color/transparent"
                        app:bsb_max="100"
                        app:bsb_min="0"
                        app:bsb_second_track_size="8dp"
                        app:bsb_progress="60"
                        app:bsb_section_count="0"
                        app:bsb_track_size="8dp"
                        app:bsb_show_progress_in_float="false"
                        app:bsb_show_section_mark="false"
                        app:bsb_show_section_text="false"
                        app:bsb_show_thumb_text="false"
                        app:bsb_always_show_bubble="false"
                        />

                    <TextView
                        android:layout_marginEnd="4dp"
                        android:text="2"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/topLayout"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="18dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tab1"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt1"
                            android:textColor="@color/orange1"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:text="Resumen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <View
                            android:id="@+id/view1"
                            android:layout_margin="4dp"
                            android:background="@color/orange1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tab2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt2"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:text="MÃ³dulos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <View
                            android:id="@+id/view2"
                            android:layout_margin="4dp"
                            android:background="@color/gray2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tab3"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt3"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:text="Logros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <View
                            android:id="@+id/view3"
                            android:layout_margin="4dp"
                            android:background="@color/gray2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/contentFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>