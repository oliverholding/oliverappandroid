                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtDegreeName"
                        android:layout_margin="4dp"
                        android:text="Carrera: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
