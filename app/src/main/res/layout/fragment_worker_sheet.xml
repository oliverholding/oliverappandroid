                            android:layout_width="0dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtOtherIncome"
                        android:layout_margin="4dp"
                        android:text="Ingresos de Rentas de 5ta Categoría: No"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtOtherIncomeAmount"
                        android:layout_margin="4dp"
                        android:text="Importe: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtOtherIncomeCompany"
                        android:layout_margin="4dp"
                        android:text="Otros Empleadores: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtOtherIncomeCompanyRuc"
                        android:layout_margin="4dp"
                        android:text="RUC: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="4dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="SALUD Y OTROS"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/btnAdd6"
                            android:layout_weight="0.1"
                            android:src="@drawable/edit_pencil_vector_asset"
                            android:layout_width="0dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtHealth1"
                        android:layout_margin="4dp"
                        android:text="Afiliado a Essalud + Vida: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtHealth2"
                        android:layout_margin="4dp"
                        android:text="Discapacidad: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtHealth3"
                        android:layout_margin="4dp"
                        android:text="Regimen de Salud: ESSALUD Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtHealth4"
                        android:layout_margin="4dp"
                        android:text="Entidad Prestadora de Servicio: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtHealth5"
                        android:layout_margin="4dp"
                        android:text="Retenciones Judiciales: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtHealth6"
                        android:layout_margin="4dp"
                        android:text="Seguro Médico: Sin información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtHealth7"
                        android:layout_margin="4dp"
                        android:text="Sistema de Pensión: Sin información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="4dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="DATOS A COMPLETAR POR EL EMPLEADOR"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/btnAdd7"
                            android:layout_weight="0.1"
                            android:src="@drawable/edit_pencil_vector_asset"
                            android:layout_width="0dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtCompanyWorkData1"
                        android:layout_margin="4dp"
                        android:text="Fecha de Ingreso a Planilla: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData2"
                        android:layout_margin="4dp"
                        android:text="Remuneración Bruta: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData3"
                        android:layout_margin="4dp"
                        android:text="Subvención Económica: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData4"
                        android:layout_margin="4dp"
                        android:text="Horario de Trabajo: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData5"
                        android:layout_margin="4dp"
                        android:text="Horario de Refrigerio: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData6"
                        android:layout_margin="4dp"
                        android:text="Total Horas Semanales: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData7"
                        android:layout_margin="4dp"
                        android:text="Régimen Laboral: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData8"
                        android:layout_margin="4dp"
                        android:text="Tipo o Modalidad de Trabajo: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData9"
                        android:layout_margin="4dp"
                        android:text="Tipo de Contrato: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData10"
                        android:layout_margin="4dp"
                        android:text="Periodicidad de la Remuneración: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCompanyWorkData11"
                        android:layout_margin="4dp"
                        android:text="Tipo de Pago: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

