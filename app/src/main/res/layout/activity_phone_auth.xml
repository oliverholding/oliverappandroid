<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/rootLayout"
    tools:context=".PhoneAuthActivity">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/phoneNumberLayout"
        android:scaleY="1"
        app:mwhVelocity="1"
        app:mwhProgress="1"
        app:mwhGradientAngle="180"
        app:mwhWaveHeight="0dp"
        app:mwhColorAlpha="0.90"
        app:mwhStartColor="@color/colorGradientStart"
        app:mwhCloseColor="@color/colorGradientEnd"
        app:mwhWaves="PairWave"/>

    <LinearLayout
        android:id="@+id/titleLayout"
        android:gravity="center"
        android:layout_margin="32dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_margin="8dp"
            android:src="@drawable/oliver_app_iconv2"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/txtTitle"
            android:textSize="32sp"
            android:text="Oliver"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/imgPhoneAuthIcon"
        android:layout_below="@id/titleLayout"
        android:layout_margin="22dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/phone_white_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="48dp"
        android:text="Ingresa tu número de teléfono"
        android:id="@+id/txtUserIndication"
        android:layout_below="@id/imgPhoneAuthIcon"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/phoneNumberLayout"
        android:layout_below="@+id/txtUserIndication"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.hbb20.CountryCodePicker
            android:id="@+id/countryPhoneCodePicker"
            android:background="@drawable/edit_text_style"
            app:ccp_showFlag="true"
            app:ccp_autoDetectLanguage="true"
            app:ccp_showPhoneCode="true"
            app:ccp_showNameCode="false"
            android:layout_margin="4dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtPhoneNumber"
            android:padding="8dp"
            android:inputType="phone"
            android:hint="_ _ _ _ _ _ _ _"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/edit_text_style"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnContinue"
        android:text="CONTINUAR"
        android:textColor="@android:color/white"
        android:background="@drawable/red_button_style"
        android:layout_margin="28dp"
        android:layout_below="@+id/phoneNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>