<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context=".PhoneAuthActivity">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:mwhGradientAngle="145"
        app:mwhStartColor="@color/blue1"
        app:mwhCloseColor="@color/blue2"
        app:mwhWaves="
        310,0,1.7,1.3,5
        310,0,1.7,1.3,0
        310,0,1.7,1.3,5
        310,0,1.7,1.3,0
        310,0,1.7,1.3,5
            310,0,1.7,1.3,
            310,0,1.7,1.3,5"/>

    <ImageView
        android:id="@+id/imgTitle"
        android:layout_margin="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/oliver_app_white_title"
        android:layout_width="100dp"
        android:layout_height="60dp"/>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/imgTitle"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="18dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/blue1"
                android:text="Bienvenido(a)"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/blue1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="Ingrese a la plataforma"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Autenticación"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Número de teléfono"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/phoneNumberLayout"
                android:layout_below="@+id/txtUserIndication"
                android:gravity="center"
               android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryPhoneCodePicker"
                    android:background="@drawable/edit_text_style_1"
                    app:ccp_showFlag="true"
                    app:ccp_autoDetectLanguage="true"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_showPhoneCode="true"
                    app:ccp_showNameCode="false"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtPhoneNumber"
                    android:padding="8dp"
                    android:inputType="phone"
                    android:hint="_ _ _ _ _ _ _ _"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@drawable/edit_text_style_1"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnContinue"
                android:text="CONTINUAR"
                android:textColor="@android:color/white"
                android:background="@drawable/button_blue_style"
                android:layout_margin="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEmailSignIn"
            android:padding="12sp"
            android:drawableLeft="@drawable/fui_ic_mail_white_24dp"
            android:text="Ingresar con Correo y Contraseña"
            android:textColor="@android:color/white"
            android:background="@drawable/button_blue_style"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegisterSignIn"
            android:padding="12sp"
            android:background="@drawable/edit_text_style_1"
            android:text="Registrarse con Correo y Contraseña"
            android:drawableLeft="@drawable/correo_electronico"
            android:textColor="@android:color/black"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>