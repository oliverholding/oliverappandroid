<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformalCompanies.AddInformalCompanyActivity">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:mwhGradientAngle="145"
        app:mwhStartColor="@color/gray1"
        app:mwhCloseColor="@color/gray2"
        app:mwhWaves="
        310,0,1.7,1.3,5
        310,0,1.7,1.3,0
        310,0,1.7,1.3,5
        310,0,1.7,1.3,0
        310,0,1.7,1.3,5
            310,0,1.7,1.3,
            310,0,1.7,1.3,5"/>

    <ImageView
        android:id="@+id/imgTitle"
        android:layout_margin="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/oliver_app_white_title"
        android:layout_width="100dp"
        android:layout_height="60dp"/>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/imgTitle"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="18dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/progressLayout"
                android:gravity="center"
                android:layout_margin="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtText1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/orange1"
                    android:padding="4dp"
                    android:background="@drawable/orange_circle_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <View
                    android:background="@color/orange1"
                    android:layout_width="20dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/txtText2"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/orange1"
                    android:padding="4dp"
                    android:background="@drawable/orange_circle_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <View
                    android:background="@color/orange1"
                    android:layout_width="20dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txtText3"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/orange1"
                    android:padding="4dp"
                    android:background="@drawable/orange_circle_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <View
                    android:background="@color/orange1"
                    android:layout_width="20dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txtText4"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/orange1"
                    android:padding="4dp"
                    android:background="@drawable/orange_circle_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/contentFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>