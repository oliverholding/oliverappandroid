<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinancialManagement.Factoring.FactoringDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBackground"
            android:src="@color/colorGradientCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="18dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginEnd="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProductImage"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:src="@color/colorGradientCenter"
                        android:layout_width="0dp"
                        android:layout_height="80dp"/>

                    <LinearLayout
                        android:gravity="end
"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtProductName"
                            android:layout_margin="4dp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:text="PRODUCT_NAME"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtFinancialInstitutionName"
                            android:layout_margin="4dp"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:text="FINANCIAL_INSTITUTION_NAME"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:padding="12dp"
                            android:layout_marginTop="12dp"
                            android:textSize="11sp"
                            android:text="Solicitar Ahora"
                            android:textColor="@color/blue1"
                            android:background="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_above="@+id/btnLoanRequest"
        android:layout_below="@+id/cardTop"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="18dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tab1"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="4dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt1"
                                android:textColor="@color/blue1"
                                android:gravity="center"
                                android:layout_margin="4dp"
                                android:text="Características"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/view1"
                                android:layout_margin="4dp"
                                android:background="@color/blue1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tab2"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="4dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt2"
                                android:textColor="@color/gray1"
                                android:gravity="center"
                                android:layout_margin="4dp"
                                android:text="Requisitos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/view2"
                                android:layout_margin="4dp"
                                android:background="@color/gray1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tab3"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="4dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt3"
                                android:textColor="@color/gray1"
                                android:gravity="center"
                                android:layout_margin="4dp"
                                android:text="Documentación"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/view3"
                                android:layout_margin="4dp"
                                android:background="@color/gray1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </HorizontalScrollView>

            <FrameLayout
                android:id="@+id/contentFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </FrameLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnLoanRequest"
        android:text="Solicitar Ahora"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_blue_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>