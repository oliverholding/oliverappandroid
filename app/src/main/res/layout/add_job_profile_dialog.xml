<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_margin="8dp"
            android:text="REGISTRAR PERFIL DE PUESTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Nombres:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtName"
            android:inputType="textCapWords"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Nombres..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Apellidos:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtSurname"
            android:inputType="textCapWords"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Apellidos..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Área:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnArea"
            android:gravity="start"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Área..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Denominación:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnDenomination"
            android:gravity="start"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Denominación..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Nombre del Puesto:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtJobName"
            android:inputType="textCapWords"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Nombre del Puesto..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Dependencia Jerárquica (Jefe Inmediato):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnImmediateBoss"
            android:gravity="start"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Dependencia Jerárquica..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Dependencia Jerárquica Funcional (Área máxima responsable):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnResponsableArea"
            android:gravity="start"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Dependencia Jerárquica Funcional..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Número de Personas a cargo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtPeopleNumber"
            android:inputType="number"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Número de Personas a cargo..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Misión del Puesto:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnJobMission"
            android:gravity="start"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Misión del Puesto..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <TextView
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:text="Especificar Misión del Puesto:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtJobMission"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Especificar Misión del Puesto..."
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/btnRegister"
            android:text="REGISTRAR NUEVO PERFIL"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/gray_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>