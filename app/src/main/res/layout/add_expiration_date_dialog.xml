<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="FECHA DE VENCIMIENTO:"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:text="Ingresa la fecha límite que tu cliente tiene para pagarte"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:drawableStart="@drawable/calendar_icon"
                    android:id="@+id/edtBthDay"
                    android:inputType="number"
                    android:padding="8dp"
                    android:maxLength="2"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Día"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:drawableStart="@drawable/calendar_icon"
                    android:id="@+id/edtBthMonth"
                    android:inputType="number"
                    android:padding="8dp"
                    android:maxLength="2"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Mes"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:drawableStart="@drawable/calendar_icon"
                    android:id="@+id/edtBthYear"
                    android:inputType="number"
                    android:padding="8dp"
                    android:maxLength="4"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Año"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btnRegister"
                android:text="ESTABLECER"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:background="@drawable/blue_button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>