<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CareManager.BusinessModelModule.BusinessModelToolFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTitle"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Modelo de Negocio"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Todos estos aspectos son los que componen a tu modelo de negocio."
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_below="@id/cardViewTitle"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/key_partners_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Partners Clave"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/txtKeyPartners"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>
                        
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddKeyPartners"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/key_activities_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Actividades Clave"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView2"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/txtKeyActivities"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddKeyActivities"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/key_resources_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Recursos Clave"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView3"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/txtKeyResources"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnKeyResources"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/value_proposal_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Propuesta de Valor"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView4"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                           android:id="@+id/txtValueProposal"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddValueProposal"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/customer_relationship_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Relación con los Clientes"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView5"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/txtCustomerRelationship"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnCustomerRelationship"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/customer_comunication_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Canales"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView6"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/txtChannels"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddChannels"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/customer_segmentation_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Segmento de Clientes"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView7"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/txtCustomerSegment"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnCustomerSegment"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/cost_structure_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Estructura de Costos"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView8"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/txtOutcomeFlow"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddOutcomeFlow"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="8dp"
                        android:src="@drawable/inncome_flow_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:text="Flujos de Ingresos"
                            android:textStyle="bold"
                            android:textColor="@color/colorGradientStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView9"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <com.anychart.AnyChartView
                            android:id="@+id/anyChartView10"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <TextView
                            android:id="@+id/txtIncomeFlow"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtPaymentMethod"
                            android:text="Sin información"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddIncomeFlow"
                        android:layout_margin="8dp"
                        android:src="@drawable/paper_write_icon"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/btnAddPaymentMethod"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="8dp"
                    android:src="@drawable/paper_write_icon"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:textSize="16sp"
                    android:text="Agregar Información adicional a Flujo de Ingresos"
                    android:textColor="@color/colorGradientStart"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>