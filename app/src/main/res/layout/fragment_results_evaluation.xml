                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
