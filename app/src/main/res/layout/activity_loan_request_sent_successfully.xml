<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".FinancialManagement.LendingProduct.LoanRequestSentSuccessfullyActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                android:layout_margin="8dp"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgImage"
                    android:layout_weight="0.3"
                    android:layout_margin="8dp"
                    android:src="@color/colorGradientStartRed"
                    android:layout_width="0dp"
                    android:layout_height="70dp"/>

                <TextView
                    android:id="@+id/txtMessage"
                    android:textSize="16sp"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Solicitud enviada a financial_institution"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBottom"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBackgroundButton"
            android:src="@color/colorGradientEndRed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

        <LinearLayout
            android:id="@+id/btnActionButton"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtButtonAction"
                android:textColor="@android:color/white"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="VER MIS SOLICITUDES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>