<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="12dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/orange1"
        android:textStyle="bold"
        android:text="ELIGE EL TIPO DE NEGOCIO"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnInformalCompany"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/orange_strokes_style"
                android:padding="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="4dp"
                    android:src="@drawable/negocios"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textSize="11sp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="NEGOCIO PERSONAL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCompany"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/orange_strokes_style"
                android:padding="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="4dp"
                    android:src="@drawable/empresas_privadas"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:textSize="11sp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="EMPRESA FORMAL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>