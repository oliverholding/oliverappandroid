<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtQuoteNumber"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="Nº de Cuota"
            android:layout_margin="4dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtExpirationDate"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="Vencimiento"
            android:layout_margin="4dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtBalance"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="Saldo Inicial"
            android:layout_margin="4dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtAmortization"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="Amortización"
            android:layout_margin="4dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtInterest"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="Interés"
            android:layout_margin="4dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtDesgravamen"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="Seguro de Desgravamen"
            android:layout_margin="4dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtFee"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="Comsión"
            android:layout_margin="4dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtQuotePayment"
            android:textColor="@color/blue1"
            android:gravity="center"
            android:text="Cuota"
            android:layout_margin="4dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>