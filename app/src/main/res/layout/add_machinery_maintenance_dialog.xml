<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ScrollView
       android:scrollbars="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:id="@+id/rootLayout"
           android:padding="12dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:textStyle="bold"
               android:textColor="@android:color/black"
               android:gravity="center"
               android:layout_margin="8dp"
               android:text="REGUSTRAR MANTENIMIENTO"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:layout_margin="8dp"
               android:textColor="@android:color/black"
               android:text="Concepto"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <EditText
               android:id="@+id/edtConcept"
               android:inputType="textCapWords"
               android:padding="8dp"
               android:layout_margin="8dp"
               android:background="@drawable/edit_text_style"
               android:hint="Concepto..."
               android:layout_width="match_parent"
               android:layout_height="38dp" />

           <TextView
               android:layout_margin="8dp"
               android:textColor="@android:color/black"
               android:text="Nombre del Activo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <EditText
               android:id="@+id/edtAsset"
               android:inputType="textCapWords"
               android:padding="8dp"
               android:layout_margin="8dp"
               android:background="@drawable/edit_text_style"
               android:hint="Nombre del Activo..."
               android:layout_width="match_parent"
               android:layout_height="38dp" />

           <TextView
               android:layout_margin="8dp"
               android:textColor="@android:color/black"
               android:text="Fecha del Mantenimiento"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <Button
                   android:drawableStart="@drawable/calendar_icon"
                   android:id="@+id/edtBthDay"
                   android:inputType="number"
                   android:padding="8dp"
                   android:maxLength="2"
                   android:layout_margin="8dp"
                   android:background="@drawable/edit_text_style"
                   android:hint="Día"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content" />

               <Button
                   android:drawableStart="@drawable/calendar_icon"
                   android:id="@+id/edtBthMonth"
                   android:inputType="number"
                   android:padding="8dp"
                   android:maxLength="2"
                   android:layout_margin="8dp"
                   android:background="@drawable/edit_text_style"
                   android:hint="Mes"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content" />

               <Button
                   android:drawableStart="@drawable/calendar_icon"
                   android:id="@+id/edtBthYear"
                   android:inputType="number"
                   android:padding="8dp"
                   android:maxLength="4"
                   android:layout_margin="8dp"
                   android:background="@drawable/edit_text_style"
                   android:hint="Año"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content" />


           </LinearLayout>

           <Button
               android:id="@+id/btnRegister"
               android:text="REGISTRAR MANTENIMIENTO"
               android:textColor="@android:color/white"
               android:background="@drawable/gray_button_style"
               android:layout_margin="12dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       </LinearLayout>

   </ScrollView>

</androidx.cardview.widget.CardView>