<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CareManager.PeopleManagement.PersonalFiles.SwornDeclarationFragment">


    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_margin="8dp"
                android:text="DECLARACIÓN JURADA DE REGIMEN PENSIONARIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtDeclaration"
                android:textColor="@android:color/black"
                android:layout_margin="4dp"
                android:text="Yo.............., identificado con D.N.I:........., DECLARO BAJO JURAMENTO, que por la presente, elijo o continúo, en el sistema de pensiones, conforme a lo siguiente:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="4dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="DATOS DE REGIMEN PENSIONARIO"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/btnAdd1"
                            android:layout_weight="0.1"
                            android:src="@drawable/edit_pencil_vector_asset"
                            android:layout_width="0dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPensionType"
                        android:layout_margin="4dp"
                        android:text="Situación del Régimen Pensionario: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtPensionDetail"
                        android:layout_margin="4dp"
                        android:text="Detalles del Régimen Pensionario: Sin Información"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>