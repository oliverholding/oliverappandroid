<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="4dp"
                android:src="@drawable/publico_objetivo"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtObjectiveName"
                    android:layout_margin="4dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="objective_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtObjectiveDestination"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Encargado del objetivo: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtPriority"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Priodidad: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtFrequency"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Seguimiento: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_margin="4dp"
                    android:background="@color/colorGradientCenterRed"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtCompetence"
                            android:layout_margin="4dp"
                            android:textColor="@android:color/black"
                            android:text="Competencia: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtAchievement"
                            android:layout_margin="4dp"
                            android:textColor="@android:color/black"
                            android:text="Logro: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddCompetence"
                        android:src="@drawable/agregar"
                        android:layout_margin="4dp"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"/>

                </LinearLayout>

                <View
                    android:layout_margin="4dp"
                    android:background="@color/colorGradientCenterRed"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txtProgress"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Progreso: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnPerfomance"
            android:text="EVALUAR DESEMPEÃ‘O"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"
            android:background="@drawable/gray_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>