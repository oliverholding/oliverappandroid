<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="12dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="¿ESTA VENTA ES A CRÉDITO O AL CONTADO?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnCashNow"
                android:layout_margin="8dp"
                android:background="@drawable/gray_button_style"
                android:src="@drawable/icono_ventas128"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="AL CONTADO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnCredit"
                android:layout_margin="8dp"
                android:background="@drawable/gray_button_style"
                android:src="@drawable/icono_credito128"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="AL CRÉDITO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>