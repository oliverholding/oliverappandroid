<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.Production.ProductionCost.ProductionMaterialsFragment">

    <LinearLayout
        android:id="@+id/itemsLayout"
        android:padding="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="4dp"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtCode"
            android:layout_margin="4dp"
            android:text="PRODUCTO"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtSupplier"
            android:layout_margin="4dp"
            android:text="TOTAL MATERIA PRIMA"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>





    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/itemsLayout"
        android:layout_above="@id/cardBottom"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTotal"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"
                android:text="TOTAL MATERIAS PRIMAS: S/ 0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>