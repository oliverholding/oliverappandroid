<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="4dp"
                android:src="@color/colorGradientCenterRed"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/txtTitle"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="title"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtQuestion1"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:text="question_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnAnswer"
                    android:hint="Seleccionar..."
                    android:background="@drawable/edit_text_style"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtInput"
                    android:hint="Ingresa tu respuesta"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtQuestion2"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:text="question_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

               <RadioGroup
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <RadioButton
                       android:id="@+id/rdAnswer1"
                       android:text="Alta"
                       android:layout_weight="1"
                       android:padding="8dp"
                       android:background="@drawable/edit_text_style"
                       android:layout_margin="4dp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <RadioButton
                       android:id="@+id/rdAnswer2"
                       android:text="Media"
                       android:layout_weight="1"
                       android:padding="8dp"
                       android:background="@drawable/edit_text_style"
                       android:layout_margin="4dp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

                   <RadioButton
                       android:id="@+id/rdAnswer3"
                       android:text="DÃ©bil"
                       android:layout_weight="1"
                       android:padding="8dp"
                       android:background="@drawable/edit_text_style"
                       android:layout_margin="4dp"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>

               </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnFinish"
            android:text="FINALIZAR"
            android:textColor="@android:color/white"
            android:layout_margin="12dp"
            android:background="@drawable/gray_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>