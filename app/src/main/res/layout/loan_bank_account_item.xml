<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtFinancialInstitutionName"
                android:textStyle="bold"
                android:textColor="@color/blue1"
                android:layout_margin="4dp"
                android:text="financial_institution_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtCc"
                android:textColor="@color/blue1"
                android:layout_margin="4dp"
                android:text="CC: account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtCci"
                android:textColor="@color/blue1"
                android:layout_margin="4dp"
                android:text="CCI: account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtCurrency"
                android:textColor="@color/blue1"
                android:layout_margin="4dp"
                android:text="Moneda: account_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnSelectBankAccount"
            android:background="@drawable/button_blue_style"
            android:textColor="@android:color/white"
            android:text="Seleccionar"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_margin="4dp"
        android:background="@color/gray2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>