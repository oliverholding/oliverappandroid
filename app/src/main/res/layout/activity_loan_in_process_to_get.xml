<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinancialManagement.LendingProduct.LoanInProcessToGetActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBackground"
            android:src="@color/colorGradientCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="18dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginEnd="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProductImage"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:src="@color/colorGradientCenter"
                        android:layout_width="0dp"
                        android:layout_height="80dp"/>

                    <LinearLayout
                        android:gravity="end
"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtProductName"
                            android:layout_margin="4dp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:text="PRODUCT_NAME"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtFinancialInstitutionName"
                            android:layout_margin="4dp"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:text="FINANCIAL_INSTITUTION_NAME"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_below="@+id/cardTop"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="18dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:padding="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/progressLayout"
                android:gravity="center"
                android:layout_margin="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtText1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blue1"
                    android:padding="4dp"
                    android:background="@drawable/check_azul"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <View
                    android:background="@color/blue1"
                    android:layout_width="40dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/txtText2"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blue1"
                    android:padding="4dp"
                    android:background="@drawable/check_azul"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <View
                    android:background="@color/blue1"
                    android:layout_width="40dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txtText3"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blue1"
                    android:padding="4dp"
                    android:background="@drawable/check_azul"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <pl.droidsonroids.gif.GifImageView
                android:layout_margin="22dp"
                android:src="@color/gray2"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <TextView
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:text="En Proceso de Desembolso"
                android:textColor="@color/blue1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtMessage"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/blue1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnRequests"
                android:text="REGRESAR A Mis Solicitudes"
                android:textColor="@android:color/white"
                android:layout_margin="22dp"
                android:background="@drawable/blue_button_style_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>