<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.StrategicDirection.OrganizationalLearning.OrganizationLearningActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTitle"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="4dp"
                        android:src="@drawable/ambiente_de_aprendizaje"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16sp"
                            android:layout_margin="4dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:text="Aprendizaje Organizacional"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="12sp"
                            android:layout_margin="4dp"
                            android:text="el centro de un aprendizaje organizacional es el talento humano, ya que es la fuente que aporta: conocimientos, experiencias y comportamientos para desarrollar la competitividad de la empresa."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:text="APRENDIZAJE ORGANIZACIONAL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:padding="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/flecha_abajo"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="30dp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="Individuos - Grupos - Organizaci贸n"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:src="@drawable/flecha_abajo"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="30dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardElevation="8dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="Cultura de Aprendizaje"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/btnItem1"
                                android:src="@drawable/informacion"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardElevation="8dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="Ambiente de Aprendizaje"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/btnItem2"
                                android:src="@drawable/informacion"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardElevation="8dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="Raz贸n de Crecimiento"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/btnItem5"
                                android:src="@drawable/informacion"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardElevation="8dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="Comunicaci贸n Abierta y compartida"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/btnItem3"
                                android:src="@drawable/informacion"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardElevation="8dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="Integraci贸n escalar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/btnItem4"
                                android:src="@drawable/informacion"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:padding="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/flecha_abajo"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        android:layout_margin="8dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="8dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:text="Mejora de Capacidades y Habilidades"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:src="@drawable/flecha_abajo"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:text="COMPETITIVIDAD EN EL ENTORNO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>

</ScrollView>