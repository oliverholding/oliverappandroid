<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="4dp"
                android:src="@color/colorGradientCenterRed"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/txtArea"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="-"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtManagementType"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Tipo de Gestión: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_margin="4dp"
                    android:text="Descripción: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMainObjective"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Objetivo Estratégico e Inspiracional: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtLinkedObjective"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Objetivo de enlace: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtInitiative1"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Actividad o Iniciativa 1: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtInitiative2"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Actividad o Iniciativa 1: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtResources"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Recursos: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtResult"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Resultados Esperados: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtResponsable"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Responsable: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtStartDate"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Inicio de Actividades: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtEndDate"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Final de Actividades: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_margin="4dp"
                      android:textColor="@android:color/black"
                      android:textStyle="bold"
                      android:text="KPI"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_margin="4dp"
                      android:textColor="@android:color/black"
                      android:textStyle="bold"
                      android:text="Seguimiento"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"/>

              </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="4dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/kp1"
                        android:text="KPI"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_margin="4dp"
                        android:id="@+id/kp1_progress"
                        android:textColor="@android:color/black"
                        android:text="Seguimiento"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="4dp"
                        android:textColor="@android:color/black"
                        android:id="@+id/kp2"
                        android:text="KPI"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_margin="4dp"
                        android:id="@+id/kp2_progress"
                        android:textColor="@android:color/black"
                        android:text="Seguimiento"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtGoal"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:text="Meta Alcanzada: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>