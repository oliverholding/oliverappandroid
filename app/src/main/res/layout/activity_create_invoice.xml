<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.Commercialization.BillsIssuing.CreateInvoiceActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtSocialReason"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:textSize="10sp"
                        android:layout_margin="2dp"
                        android:text="Razón Social de la Empresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtCompanyAddress"
                        android:gravity="start"
                        android:layout_margin="2dp"
                        android:textSize="10sp"
                        android:text="Dirección de la Empresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/orange_strokes_style"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:text="Factura Electrónica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtRuc"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:layout_margin="4dp"
                        android:text="RUC: 00000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:text="E001-001"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtExpirationDate"
                    android:textColor="@android:color/black"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:textSize="11sp"
                    android:background="@drawable/edit_text_style"
                    android:text="VENCIMIENTO: COMPLETAR"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtIssueDate"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:textSize="11sp"
                    android:background="@drawable/edit_text_style"
                    android:text="EMISIÓN: COMPLETAR"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtCustomerName"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textSize="11sp"
                android:background="@drawable/edit_text_style"
                android:text="DESTINATARIO: COMPLETAR"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtDocumentNumber"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textSize="11sp"
                android:background="@drawable/edit_text_style"
                android:text="RUC DEL CLIENTE: COMPLETAR"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textSize="11sp"
                android:background="@drawable/edit_text_style"
                android:text="MONEDA: Soles (S/)"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtObservation"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textSize="11sp"
                android:background="@drawable/edit_text_style"
                android:text="OBSERVACIONES: COMPLETAR"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:text="Cantidad"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:maxLines="1"
                    android:layout_margin="4dp"
                    android:text="Código"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:maxLines="1"
                    android:text="Producto"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:text="Precio"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:text="Descuento"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:text="Total"
                    android:maxLines="1"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:text=""
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/scrollView"
        android:id="@+id/recyclerView"
        android:layout_above="@id/summaryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/summaryLayout"
        android:gravity="center"
        android:layout_above="@id/btnRegisterSale"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAddProduct"
                android:text="AGREGAR PRODUCTO"
                android:textColor="@android:color/white"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:background="@drawable/orange_button_style_ripple"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>

            <Button
                android:id="@+id/btnAddSeller"
                android:text="AGREGAR VENDEDOR"
                android:textColor="@android:color/white"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:background="@drawable/orange_button_style_ripple"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/orange_strokes_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSaleValue"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="2dp"
                android:text="VALOR VENTA: S/ 0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="2dp"
                android:text="ISC: S/ 0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtTaxes"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="2dp"
                android:text="IGV: S/ 0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtTotalAmount"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="TOTAL: S/ 0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnRegisterSale"
        android:text="REGISTRAR VENTA"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/orange_button_style_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>