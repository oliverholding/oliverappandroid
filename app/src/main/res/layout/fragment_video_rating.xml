<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.CareLearning.VideoResourses.VideoRatingFragment">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:textColor="@color/orange1"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:text="Valora el curso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.hsalf.smileyrating.SmileyRating
                android:layout_margin="22dp"
                android:id="@+id/smile_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSendRating"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:text="Enviar Valoración"
                android:background="@drawable/orange_strokes_rectangle"
                android:layout_margin="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/txtMessage"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/orange1"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:text="VALORACIÓN ENVIADA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnWhatsApp"
                android:padding="12dp"
                android:drawableEnd="@drawable/whatsapp"
                android:textColor="@android:color/white"
                android:text="¿Neceistas Ayuda?"
                android:background="@drawable/orange_button_style_ripple"
                android:layout_margin="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>