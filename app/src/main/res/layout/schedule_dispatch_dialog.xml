<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_above="@id/btnRegister"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtMessage"
                android:textSize="14sp"
                android:text="Detalles del pedido"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProduct"
                    android:src="@drawable/profile_image_blue"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:id="@+id/txtCustomerName"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="customer_name"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDocumentNumber"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="RUC: COMPLETAR"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/edit_pencil_vector_asset"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>

            </LinearLayout>


            <CheckBox
                android:enabled="false"
                android:checked="true"
                android:text="Registrar factura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Tipo de Venta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdCash"
                    android:layout_margin="4dp"
                    android:text="AL CONTADO"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rdCredit"
                    android:layout_margin="4dp"
                    android:text="AL CRÉDITO"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

            <LinearLayout
                android:id="@+id/creditLayout"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:text="Vencimiento de la Factura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:drawableStart="@drawable/calendar_icon"
                        android:id="@+id/edtBthDay"
                        android:inputType="number"
                        android:padding="8dp"
                        android:maxLength="2"
                        android:layout_margin="8dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="Día"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:drawableStart="@drawable/calendar_icon"
                        android:id="@+id/edtBthMonth"
                        android:inputType="number"
                        android:padding="8dp"
                        android:maxLength="2"
                        android:layout_margin="8dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="Mes"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:drawableStart="@drawable/calendar_icon"
                        android:id="@+id/edtBthYear"
                        android:inputType="number"
                        android:padding="8dp"
                        android:maxLength="4"
                        android:layout_margin="8dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="Año"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Deine la Dirección de Entrega:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Departamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDepartment"
                android:padding="8dp"
                android:gravity="start|center_vertical"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text_style"
                android:hint="Departamento o Región..."
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <TextView
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Provincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnProvince"
                android:padding="8dp"
                android:gravity="start|center_vertical"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text_style"
                android:hint="Provincia..."
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <TextView
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Distrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDistrict"
                android:padding="8dp"
                android:gravity="start|center_vertical"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text_style"
                android:hint="Distrito..."
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <TextView
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Dirección exacta de domicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtAddress"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text_style"
                android:hint="Dirección exacta..."
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <TextView
                android:layout_margin="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:text="Elige el turno de Entrega:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdMorning"
                    android:text="Mañana"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rdAfternoon"
                    android:text="Tarde"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rdNight"
                    android:text="Noche"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </RadioGroup>

            <LinearLayout
                android:id="@+id/middleLayout"
                android:padding="8dp"
                android:layout_below="@+id/scrollView"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:text="Cantidad"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:maxLines="1"
                    android:text="Producto"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:text="Precio"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_margin="4dp"
                    android:text="Total"
                    android:maxLines="1"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="220dp">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnRegister"
        android:text="PROGRAMAR DESPACHO"
        android:textColor="@android:color/white"
        android:background="@drawable/gradient_start2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>