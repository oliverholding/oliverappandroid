<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CareManager.ManagementControlAndReports.ContractManagement.ContractsTemplatesFragment">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTitle"
                android:textSize="16sp"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="PLANTILLAS DESCARGABLES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="4dp"
                        android:src="@drawable/contratos"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:text="CONTRATO  DE  TRABAJO  A PLAZO INDETERMINADO"
                        android:textColor="@android:color/black"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/btnDownload1"
                        android:layout_margin="4dp"
                        android:src="@drawable/descargar_archivo"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="4dp"
                        android:src="@drawable/contratos"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:text="MODELO DE CONTRATO DE TRABAJO SUJETO A MODALIDAD"
                        android:textColor="@android:color/black"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/btnDownload2"
                        android:layout_margin="4dp"
                        android:src="@drawable/descargar_archivo"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="4dp"
                        android:src="@drawable/contratos"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:text="MODELO DE CONTRATO COMPRAVENTA"
                        android:textColor="@android:color/black"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/btnDownload3"
                        android:layout_margin="4dp"
                        android:src="@drawable/descargar_archivo"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>