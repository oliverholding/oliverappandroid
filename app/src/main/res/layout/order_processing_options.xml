<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="12dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="ACTUALIZAR NOTA DE PEDIDO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnReturned"
                android:layout_margin="8dp"
                android:background="@drawable/orange_button_style_ripple"
                android:src="@drawable/cancelar_nota_de_pedido"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="11sp"
                android:layout_margin="4dp"
                android:text="CANCELAR NOTA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnReady"
                android:layout_margin="8dp"
                android:background="@drawable/gray_button_style"
                android:src="@drawable/programar_despacho_mercancias"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="11sp"
                android:layout_margin="4dp"
                android:text="PROGRAMAR DESPACHO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>