<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTittle"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="CREAR FLUJOGRAMA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Selecciona el tipo de flujo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

               <TextView
                   android:padding="8dp"
                   android:gravity="center"
                   android:textColor="@android:color/black"
                   android:text="INICIO O FIN"
                   android:textSize="11sp"
                   android:background="@drawable/circulo"
                   android:layout_margin="4dp"
                   android:layout_width="100dp"
                   android:layout_height="100dp"/>

                <RadioButton
                    android:id="@+id/rd1"
                    android:background="@drawable/edit_text_style_1"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="PROCESO"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:background="@drawable/cuadrado"
                    android:layout_margin="4dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <RadioButton
                    android:id="@+id/rd2"
                    android:background="@drawable/edit_text_style_1"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@android:color/black"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="CONDICIÃ“N"
                    android:textSize="11sp"
                    android:background="@drawable/rombo"
                    android:layout_margin="4dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <RadioButton
                    android:id="@+id/rd3"
                    android:background="@drawable/edit_text_style_1"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="Nombre del proceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtName"
                    android:inputType="text"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Nombre del proceso..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnFinish"
            android:text="Agregar Proceso"
            android:textColor="@android:color/white"
            android:background="@drawable/orange_button_style_ripple"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>