<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.ManagementControlAndReports.ContractManagement.MyContractsFragment">

    <TextView
        android:id="@+id/txtTitle"
        android:textSize="16sp"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="MIS CONTRATOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/txtTitle"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btnAddContract"
        android:text="AGREGAR NUEVO CONTRATO"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        android:background="@drawable/orange_button_style_ripple"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>