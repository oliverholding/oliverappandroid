<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="ELIGE UNA LISTA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPurchaseList"
            android:padding="12dp"
            android:layout_margin="12dp"
            android:textColor="@android:color/white"
            android:background="@drawable/orange_button_rectangle_ripple"
            android:text="Lista de Compras"
            android:drawableStart="@drawable/compras"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnWarehouses"
            android:padding="12dp"
            android:layout_margin="12dp"
            android:textColor="@android:color/white"
            android:background="@drawable/orange_button_rectangle_ripple"
            android:text="Almacenes"
            android:drawableStart="@drawable/almacen"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>