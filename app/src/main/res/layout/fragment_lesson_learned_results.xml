<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.ManagementControlAndReports.LessonLearned.LessonLearnedResultsFragment">

    <LinearLayout
        android:padding="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:textStyle="bold"
            android:textColor="@color/orange1"
            android:text="Resultados de la EvaluaciÃ³n:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_margin="18dp"
            android:src="@drawable/evaluacion"
            android:layout_width="80dp"
            android:layout_height="80dp"/>


        <TextView
            android:id="@+id/txtCorrect"
            android:textSize="14sp"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:textColor="@color/greenColor"
            android:text="Respuestas Correctas: - "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtIncorrect"
            android:textSize="14sp"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:textColor="@color/redColor"
            android:text="Respuestas Incorrectas: - "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnFinish"
            android:layout_margin="18dp"
            android:text="Intentarlo nuevamente"
            android:textColor="@android:color/white"
            android:background="@drawable/orange_button_style_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>