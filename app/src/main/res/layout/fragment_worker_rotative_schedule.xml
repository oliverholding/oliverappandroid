<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.PeopleManagement.RoasterAndPerfomance.WorkerRotativeScheduleFragment">

    <TextView
        android:id="@+id/txtTittle"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:text="HORARIO ROTATIVO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_below="@id/txtTittle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDayDetail"
            android:gravity="center"
            android:text="DÍA"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtStartTime"
            android:gravity="center"
            android:textStyle="bold"
            android:text="INICIO"
            android:textColor="@android:color/black"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtEndTime"
            android:gravity="center"
            android:textStyle="bold"
            android:text="FIN"
            android:textColor="@android:color/black"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/middleLayout"
        android:layout_above="@id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btnRegister"
        android:text="REGISTRAR NUEVO HORARIO"
        android:layout_margin="8dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gray_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>