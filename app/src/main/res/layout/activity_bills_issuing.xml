<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareManager.Commercialization.BillsIssuing.BillsIssuingActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTitle"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="4dp"
                    android:src="@drawable/boletas_facturas"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:layout_margin="4dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="EmisiÃ³n de Boletas y Facturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="12sp"
                        android:layout_margin="4dp"
                        android:text="Aprende a emitir boletas y facturas para tu negocio."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/buttonsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnBillList"
                android:text="MIS BOLETAS Y FACTURAS REGISTRADAS"
                android:padding="16dp"
                android:gravity="center"
                android:drawableStart="@drawable/boletas_facturas"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:background="@drawable/orange_strokes_focus_style"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCreateBill"
                android:text="CREAR PRE BOLETA"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:gravity="center"
                android:drawableStart="@drawable/crear_boleta"
                android:background="@drawable/orange_strokes_focus_style"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnCreateInvoice"
                android:text="CREAR PRE FACTURA"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:gravity="center"
                android:drawableStart="@drawable/crear_factura"
                android:background="@drawable/orange_strokes_focus_style"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDashboards"
                android:text="DASHBOARDS DE VENTAS"
                android:padding="16dp"
                android:gravity="center"
                android:drawableStart="@drawable/dashboards"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:background="@drawable/orange_strokes_focus_style"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>