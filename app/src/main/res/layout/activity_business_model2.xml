                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/btnQuestion1"
                                android:layout_margin="8dp"
                                android:src="@drawable/editar"
                                android:layout_weight="0.2"
                                android:layout_width="0dp"
                                android:layout_height="20dp"/>

