<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CareManager.PeopleManagement.WorkersPayroll.ProfitFourthRentFragment">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewTitle"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Renta de 4ta Categoría:"
                        android:textSize="18sp"
                        android:layout_margin="4dp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Aprende cómo funcionan los recibos por honorarios y las retenciones de 4ta categría."
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtWorkerName"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:layout_margin="2dp"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtWorkerAddress"
                        android:gravity="start"
                        android:layout_margin="2dp"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/orange_strokes_style"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtRuc"
                        android:background="@drawable/edit_text_style"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:layout_margin="4dp"
                        android:text="RUC: Completar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:text="RECIBO POR HONORARIOS ELECTRONICO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:text="E001-001"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtCompanySocialReason"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Recbí de: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtCompanyRuc"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Identificado con RUC número: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtCompanyAddress"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Domiciliado en: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtConcept"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text_style"
                android:text="Concepto: Completar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtObservation"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text_style"
                android:text="Observaciones: Completar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtDate"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:text="Fecha de Emisión: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:padding="8dp"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.3"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="start"
                        android:textSize="10sp"
                        android:layout_margin="2dp"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_margin="2dp"
                        android:textSize="10sp"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/orange_strokes_style"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txtPayment"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:layout_margin="4dp"
                        android:background="@drawable/edit_text_style"
                        android:text="TOTAL POR HONORARIOS: COMPLETAR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtRetention"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:layout_margin="4dp"
                        android:background="@drawable/edit_text_style"
                        android:text="RETENCIÓN (8%) IR: COMPLETAR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtTotalPayment"
                        android:textStyle="bold"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:text="TOTAL NETO RECIBIDO: S/ 0.00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>