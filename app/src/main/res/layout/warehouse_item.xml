<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="8dp"
                android:src="@drawable/almacen"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="70dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtWarehouseName"
                    android:textSize="16sp"
                    android:layout_margin="4dp"
                    android:textStyle="bold"
                    android:text="WARE_HOUSE_NAME"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtWarehouseDestination"
                    android:textSize="16sp"
                    android:layout_margin="4dp"
                    android:text="Destino del almacén: destiniy"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnManageWarehouse"
                    android:text="GESTIONAR ALMACÉN"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/gray_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>