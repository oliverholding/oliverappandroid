<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTittle"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="CREAR FLUJOGRAMA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="Selecciona la dirección para el siguiente flujo:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rd1"
                        android:layout_margin="8dp"
                        android:padding="8dp"
                        android:background="@drawable/edit_text_style_1"
                        android:text="Izquierda"
                        android:drawableEnd="@drawable/flecha_izquierda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:id="@+id/rd2"
                        android:layout_margin="8dp"
                        android:padding="8dp"
                        android:background="@drawable/edit_text_style_1"
                        android:text="Derecha"
                        android:drawableEnd="@drawable/flecha_derecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:id="@+id/rd3"
                        android:layout_margin="8dp"
                        android:padding="8dp"
                        android:background="@drawable/edit_text_style_1"
                        android:text="Arriba"
                        android:drawableEnd="@drawable/flecha_arriba"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:id="@+id/rd4"
                        android:layout_margin="8dp"
                        android:padding="8dp"
                        android:background="@drawable/edit_text_style_1"
                        android:text="Abajo"
                        android:drawableEnd="@drawable/flecha_abajo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RadioGroup>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnFinish"
            android:text="Agregar Dirección"
            android:textColor="@android:color/white"
            android:background="@drawable/orange_button_style_ripple"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>