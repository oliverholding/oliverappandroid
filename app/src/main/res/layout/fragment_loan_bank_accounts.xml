<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FinancialManagement.LendingProduct.LoanBankAccountsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_above="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/accountSelectedLayout"
                android:layout_below="@id/recyclerView"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/blue1"
                    android:layout_margin="4dp"
                    android:text="Cuenta Seleccionada:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtFinancialInstitutionName"
                    android:textColor="@color/blue1"
                    android:layout_margin="4dp"
                    android:text="institutciÃ³n Financiera:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtCc"
                    android:textColor="@color/blue1"
                    android:layout_margin="4dp"
                    android:text="CC:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtCci"
                    android:textColor="@color/blue1"
                    android:layout_margin="4dp"
                    android:text="CCI:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtCurrency"
                    android:textColor="@color/blue1"
                    android:layout_margin="4dp"
                    android:text="Moneda:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_above="@id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAddBankAccounts"
            android:layout_margin="8dp"
            android:text="AGREGAR CUENTA BANCARIA"
            android:textColor="@android:color/white"
            android:background="@drawable/blue_button_rectangle"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_margin="4dp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnContinue"
            android:text="Finalizar"
            android:textColor="@android:color/white"
            android:background="@drawable/blue_button_style_ripple"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>