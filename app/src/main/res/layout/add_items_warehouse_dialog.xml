<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="12dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="AGREGAR NUEVA EXISTENCIA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnRegisterNewProduct"
                android:layout_margin="8dp"
                android:background="@drawable/gray_button_style"
                android:src="@drawable/registrar_nueva_existencia"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="REGISTRAR NUEVA EXISTENCIA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnStoreProducts"
                android:layout_margin="8dp"
                android:background="@drawable/gray_button_style"
                android:src="@drawable/transferir_mercancia_tienda"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="TRANSFERIR DESDE LA TIENDA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>